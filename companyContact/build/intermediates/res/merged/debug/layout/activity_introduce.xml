<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1,打开app时候会看到一片空白，这时候点击手机的菜单键" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/step1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2,点击浏览本机Excel文件" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/step2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3,在你的手机里找到要导入的excel文件并点击" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/step3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4,导入完后可以进行检查，确认无误后，点击上传到App中（上传时间可能会稍微长，请耐心等候）" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/step4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5，上传成功后，主页就会有刚刚上传的通讯录" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/step5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6，更多功能，请查阅菜单栏，此处不一一细说了。" />

            <Button
                android:id="@+id/introduc_jump"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳到主界面" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>